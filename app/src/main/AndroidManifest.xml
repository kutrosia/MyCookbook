                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.main.MainActivity"> </meta-data>
        </activity>
        <activity
            android:name=".ui.timer.TimerActivity"
            android:parentActivityName=".ui.main.MainActivity">
